{
  "plugins": ["stylelint-prettier", "stylelint-order"],
  "extends": ["stylelint-config-recommended", "stylelint-prettier/recommended", "stylelint-config-idiomatic-order"],
  "rules": {
    "selector-class-pattern": [
      "^[a-z]+(?:-[a-z]+)*(?:__[a-z]+(?:-[a-z]+)*)?(?:--[a-z]+(?:-[a-z]+)*)?$",
      {
        "message": "Selector should follow BEM conventions (e.g., block__element--modifier)"
      }
    ],
    "no-empty-source": null,
    "prettier/prettier": true
  },
  "overrides": [
    {
      "plugins": ["stylelint-scss"],
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss", "stylelint-config-prettier-scss", "stylelint-config-idiomatic-order"],
      "customSyntax": "postcss-scss"
    }
  ]
}
